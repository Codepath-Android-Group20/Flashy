<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.flashy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flashy">
        <activity
            android:name=".OtherUsersCollectionActivity"
            android:exported="false"
            android:label="@string/title_activity_other_users_collection"
            android:theme="@style/Theme.Flashy.NoActionBar" />

        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Flashy.WelcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <activity
            android:name=".CreateCollectionActivity"
            android:exported="false" />
        <activity
            android:name=".ResultsActivity"
            android:exported="true"
            android:label="@string/title_activity_results"
            android:theme="@style/Theme.Flashy.NoActionBar" />
        <activity
            android:name=".QuizActivity"
            android:exported="false" />
        <activity
            android:name=".CollectionActivity"
            android:exported="false" />

        <meta-data
            android:name="com.parse.SERVER_URL"
            android:value="@string/back4app_server_url" />
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/back4app_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/back4app_client_key" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />
        
        <activity
            android:name=".ViewCollectionActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>